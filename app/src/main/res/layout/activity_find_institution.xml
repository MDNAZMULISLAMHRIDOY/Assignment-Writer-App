<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:background="@drawable/img"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Premium.FindInstitution">

    <RelativeLayout
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="140dp"
            android:layout_marginRight="20dp"
            app:cardCornerRadius="12dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            app:cardElevation="10dp"
            app:cardBackgroundColor="#FF9800">

            <TextView
                android:fontFamily="@font/title"
                android:textSize="19dp"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:textColor="#210B45"
                android:text="Get Premium"
                />
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp">

        <fragment
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:id="@+id/map"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginTop="60dp"
            app:cardCornerRadius="30dp"
            android:layout_marginRight="7dp"
            android:alpha="0.9"
            app:cardElevation="10dp"
            app:cardBackgroundColor="@color/white"
            android:layout_marginLeft="7dp"
            android:layout_height="40dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Find Location"
                    android:fontFamily="@font/button"
                    android:background="@color/white"
                    android:layout_marginLeft="8dp"
                    android:textStyle="bold"
                    android:textColorHint="#645555"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMaxTextSize="18dp"
                    android:autoSizeMinTextSize="5dp"
                    android:textColor="@color/black"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

    <TextView
        android:fontFamily="@font/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Generated Result"
        android:textSize="30dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        android:textStyle="bold"/>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1"
            android:background="@drawable/background"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textStyle="bold"
                android:text="Education Institute"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:gravity="center"
                android:textAlignment="center"
                android:fontFamily="@font/title"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="1">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:cardElevation="10dp"
            app:cardCornerRadius="5dp"
            android:layout_margin="8dp">

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/recyclerView"/>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>